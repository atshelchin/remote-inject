{
  "name": "@shelchin/remote-inject-sdk",
  "version": "0.1.0",
  "description": "SDK for connecting DApps to mobile wallets via Remote Inject protocol",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target browser && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "ethereum",
    "wallet",
    "web3",
    "dapp",
    "remote",
    "inject",
    "eip-1193"
  ],
  "license": "MIT",
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.0.0"
  }
}
